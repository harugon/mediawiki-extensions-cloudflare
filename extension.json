{
	"name": "Cloudflare",
	"version": "0.2",
	"author": [
		"harugon"
	],
	"url": "https://github.com/harugon/mediawiki-extensions-cloudflare",
	"descriptionmsg": "cloudflare-desc",
	"license-name": "MIT",
	"type": "other",
	"requires": {
		"MediaWiki": ">= 1.37.0"
	},
	"MessagesDirs": {
		"Cloudflare": [
			"i18n"
		]
	},
	"AutoloadNamespaces": {
		"MediaWiki\\Extension\\Cloudflare\\": "includes/"
	},
	"load_composer_autoloader": true,
	"HookHandlers": {
		"main": {
			"class": "MediaWiki\\Extension\\Cloudflare\\HookHandler",
			"services": [ "MainConfig" ]
		}
	},
	"Hooks": {
		"LocalFilePurgeThumbnails": "main",
		"PageDeleteComplete": "main",
		"TitleSquidURLs": "main"
	},
	"ConfigRegistry": {
		"cloudflare": "GlobalVarConfig::newInstance"
	},
	"config": {
		"CloudflareEmail": {
			"description": "Cloudflare Email",
			"public": false,
			"value": false
		},
		"CloudflareAPIKey": {
			"description": "Cloudflare APIKey",
			"public": false,
			"value": false
		},
		"CloudflareZoneID": {
			"description": "Cloudflare Zon ID",
			"public": false,
			"value": false
		},
		"CloudflarePurgePage": {
			"description": "Purge a page from cache",
			"public": true,
			"value": false
		},
		"CloudflarePurgeFile": {
			"description": "Purge a File from cache",
			"public": true,
			"value": true
		}
	},
	"manifest_version": 2
}
